.model small
.stack 100h
.data
num1 db 25h       ; first 8-bit number (hex 25 = 37 decimal)
num2 db 15h       ; second 8-bit number (hex 15 = 21 decimal)
result db ?       ; to store the sum
msg db 'Result: $'

.code
main proc
mov ax, @data     ; initialize data segment
mov ds, ax

; Perform addition
mov al, num1      ; load first number into AL
add al, num2      ; add second number
mov result, al    ; store result in memory

; Print message "Result: "
mov dx, offset msg
mov ah, 9
int 21h

; Convert result to ASCII and print
mov al, result    ; load result
mov ah, 0
mov bl, 10        ; divisor for decimal conversion
div bl            ; divide AL by 10 ? quotient in AL, remainder in AH

; Print tens digit
add al, 30h       ; convert to ASCII
mov dl, al
mov ah, 2
int 21h

; Print ones digit
mov al, ah        ; remainder
add al, 30h       ; convert to ASCII
mov dl, al
mov ah, 2
int 21h

; Exit program
mov ah, 4ch
int 21h
main endp
end main

